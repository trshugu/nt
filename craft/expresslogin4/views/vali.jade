doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript", src="coffee-script/extras/coffee-script.js")
    script(type="text/javascript", src="validator-js/validator.min.js")
    script(type="text/javascript", src="vue/dist/vue.min.js")
    script(type="text/javascript", src="/javascript/vali.js")
    script(type="text/javascript").
      isPost = "#{postback}"
  body
    h1= title
    p Welcome to #{title}
    span #{test}
    form(method="POST" action="/vali" target="_self")#vali
      input(type="text" name="taisyo" value="#{taisyo}" v-model="taisyo")
      .vt(style="color:#f00" v-text="error")
      input(type="text" name="niban" value="#{niban}" v-model="niban")
      .vt(style="color:#f00" v-text="erroniban")
      //-
        .vali {{vvv}}
        .vali(v-show="true") aa
        .vali(v-show="taisyo == 'deru'") bbb
      br
      //-
        .yy #{taisyo} yy
        .vt(v-text="taisyo")
      input(type="submit" v-attr="disabled: !agree")
      //- input(type="submit" v-attr="disabled: taisyo == ''")
      br
      //-
        | チェックボックスでの非活性
        br
        form
          input(type="checkbox" v-model="agree")
          input(type="submit" v-attr="disabled: !agree")




