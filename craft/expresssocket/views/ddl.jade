doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript", src="coffee-script/extras/coffee-script.js")
    script(type="text/javascript", src="validator-js/validator.min.js")
    script(type="text/javascript", src="vue/dist/vue.min.js")
    script(type="text/javascript", src="javascript/ddl.js")
  body
    h1= title
    p Welcome to #{title}
    form(method="POST" action="ddl" target="_self")#ddl
      {{dropdown}}
      //- select(name="dropdown" size="1" onchange="oc(this)")#jav
      select(name="dropdown" v-model="dropdown")#jav
        option(value="a") あ
        option(value="i") い
        option(value="u") う
      
      input(type="submit" value="a")
      .a(v-show="dropdown == 'a'")
        | あ
      .i(v-show="dropdown == 'i'")
        | い
      .u(v-show="dropdown == 'u'")
        | う




